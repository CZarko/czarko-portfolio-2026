---
const { title, image } = Astro.props;
---

<div class="group perspective-distant">
  <div
    class="relative w-64 h-64 rounded-full bg-zinc-900
           transition-transform duration-700
           group-hover:rotate-360
           group-hover:scale-110
           group-hover:transform:[rotateY(180deg)]"
  >
    <!-- Vinyl grooves -->
    <div class="absolute inset-2 rounded-full border border-zinc-700" />
    <div class="absolute inset-6 rounded-full border border-zinc-800" />

    <!-- Label -->
    <div class="absolute inset-16 rounded-full bg-emerald-500
                flex items-center justify-center text-zinc-900
                text-xs font-bold text-center px-2">
      {title}
    </div>
  </div>
</div>
